<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Apperger"
             x:Class="Apperger.MainPage">
<ContentPage.Resources>
    <StyleSheet Source="Estilos/estilos.css" />
</ContentPage.Resources>

    <StackLayout StyleClass="body" Padding="40">
        <Image Source="iso_horizontal.png" />
        <Entry Placeholder="Ingrese su usuario" PlaceholderColor="black" TextColor="black"  x:Name="email"></Entry>
        <Entry Placeholder="Ingrese su contraseña" PlaceholderColor="black" IsPassword="true" TextColor="black" x:Name="password"></Entry>
        
        <!--<Label Text="{Binding nombre}"/>-->

        <Button x:Name="btnIrAOtraPagina" Text="Ingresar"></Button>
        
        
        
    </StackLayout>

</ContentPage>
